html(lang='ru', ng-app="aboard", ng-controller="AppCtrl", ng-cloak)

    head: block head

        block head-meta
            meta(charset='utf-8')

        block head-title
            title {{head.title}}

        block head-scripts
            script(src='/scripts/libs/angular/angular.min.js')
            script(src='/scripts/libs/angular/angular-resource.min.js')
            script(src='/scripts/libs/angular/angular-route.min.js')
            :coffeescript
                app= angular.module 'aboard', ['ngResource', 'ngRoute'], ($routeProvider, $locationProvider) ->
                    $locationProvider.html5Mode true

                app.factory 'User', ($resource) ->
                    $resource '/api/v1/user', {}

                app.controller 'AppCtrl', ($rootScope, User) ->
                    $rootScope.user= User.get (user) ->
                        console.info 'User resolved', user

    body: block body
