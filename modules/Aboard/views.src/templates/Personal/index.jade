extends layout

block body
    h1 Персональные данные

    form(name="UserForm", ng-controller="UserFormCtrl", ng-submit="save(user)")



        fieldset
            legend Пользователь

            input(type='text', ng-model='user.name', required)
            input(type='text', ng-model='user.title', required)

            button(type='submit', ng-disabled="UserForm.$invalid") Сохранить
